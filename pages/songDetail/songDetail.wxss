.songDetailContainer {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.circle {
  z-index: 2;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 10rpx 0;
}
.needle {
  position: relative;
  z-index: 1;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
}
.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.dis {
  width: 100%;
  height: 100%;
}
.MusicImg {
  position: absolute;
  inset: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}
